<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="131.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.home.bookmanagmentapplication.mainController">
    <MenuBar fx:id="menuBar" prefWidth="581.0">
        <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" onAction="#onLogoutButtonPressed" text="Logout" />
            <MenuItem mnemonicParsing="false" onAction="#onCloseButtonPress" text="Close" />
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
            <MenuItem mnemonicParsing="false" onAction="#onAboutButtonPressed" text="About" />
        </Menu>
    </MenuBar>
    <GridPane alignment="CENTER" prefHeight="105.0" prefWidth="600.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <StackPane prefHeight="150.0" prefWidth="200.0">
            <Button fx:id="viewBooks" alignment="CENTER" mnemonicParsing="false" onAction="#onViewBooksPressed" prefHeight="25.0" prefWidth="120.0" text="View Books" />
        </StackPane>
        <StackPane prefHeight="150.0" prefWidth="200.0" GridPane.columnIndex="1">
            <Button fx:id="viewUsers" alignment="CENTER" mnemonicParsing="false" onAction="#onViewUsersPressed" prefHeight="25.0" prefWidth="121.0" text="View Users" />
        </StackPane>
        <StackPane prefHeight="150.0" prefWidth="200.0" GridPane.columnIndex="2">
            <Button fx:id="viewIssuedBooks" alignment="CENTER" mnemonicParsing="false" onAction="#onViewIssuedBooksPressed" prefHeight="25.0" prefWidth="120.0" text="View Issued Books" />
        </StackPane>
        <StackPane prefHeight="150.0" prefWidth="200.0" GridPane.columnIndex="3">
            <Button fx:id="issueBook" alignment="CENTER" mnemonicParsing="false" onAction="#onIssueBooksPressed" prefHeight="25.0" prefWidth="120.0" text="Issue Book" />
        </StackPane>
        <StackPane prefHeight="150.0" prefWidth="200.0" GridPane.rowIndex="1">
            <Button fx:id="addUser" alignment="CENTER" mnemonicParsing="false" onAction="#onAddUserPressed" prefHeight="25.0" prefWidth="120.0" text="Add User" />
        </StackPane>
        <StackPane prefHeight="150.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <Button fx:id="addBook" alignment="CENTER" mnemonicParsing="false" onAction="#onAddBookPressed" prefHeight="25.0" prefWidth="120.0" text="Add Book" />
        </StackPane>
        <StackPane prefHeight="150.0" prefWidth="200.0" GridPane.columnIndex="2" GridPane.rowIndex="1">
            <Button fx:id="returnBook" alignment="CENTER" mnemonicParsing="false" onAction="#onReturnBookPressed" prefHeight="25.0" prefWidth="120.0" text="Return Book" />
        </StackPane>
    </GridPane>
</VBox>
